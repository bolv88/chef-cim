#---------------------------------------------------------------------
# round robin balancing between the various backends
#---------------------------------------------------------------------
backend app
    balance     roundrobin
    option httpchk GET / HTTP/1.0
    <%- 
    i = 0
    @client_ips.each{|ip|
    %>
      server  app<%= i%> <%= ip%>:<%= @back_port%> check inter 5000 weight 10 rise 2 fall 5
    <%- 
        i += 1
      } 
    %>
