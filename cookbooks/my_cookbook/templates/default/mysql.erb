[mysql]

# CLIENT #
port                           = 3306
socket                         = /data0/mysql/mysql.sock

[mysqld]
bind-address = <%= @bind_address %>
# GENERAL #
user                           = mysql
default-storage-engine         = InnoDB
socket                         = /data0/mysql/mysql.sock
pid-file                       = /data0/mysql/mysql.pid

# MyISAM #
key-buffer-size                = 32M
myisam-recover                 = FORCE,BACKUP

# SAFETY #
max-allowed-packet             = 16M
max-connect-errors             = 1000000
skip-name-resolve
innodb                         = FORCE

# DATA STORAGE #
